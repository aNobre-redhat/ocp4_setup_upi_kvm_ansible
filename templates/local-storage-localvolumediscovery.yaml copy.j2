apiVersion: local.storage.openshift.io/v1alpha1
kind: LocalVolumeDiscovery
metadata:
  name: auto-discover-devices
  namespace: openshift-local-storage
spec:
  tolerations:
  - operator: "Exists"
  nodeSelector:
    nodeSelectorTerms:
    - matchExpressions:
      - key: kubernetes.io/hostname
        operator: In
        values:
        - {{ infraid.stdout }}-odf-1
        - {{ infraid.stdout }}-odf-2
        - {{ infraid.stdout }}-odf-3
