apiVersion: v1
kind: Pod
metadata:
  name: busybox
  namespace: default
spec:
  containers:
    - name: busybox
      image: busybox
      command: [ "/bin/sh", "-c", "while true; do date; sleep 1; done;" ]
      volumeMounts:
        - mountPath: /pvc
          name: pvc
  volumes:
    - name: pvc
      persistentVolumeClaim:
        claimName: example-pvc-rwo
  restartPolicy: Never

